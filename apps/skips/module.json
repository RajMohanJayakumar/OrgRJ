{
  "name": "MMM Fingers Game Module",
  "version": "1.0.0",
  "description": "Multi-Modal Memory finger training game for cognitive enhancement",
  "type": "game-module",
  "category": "wellness",
  "author": "FinClamp Development Team",
  "created": "2025-01-31",
  "lastModified": "2025-01-31",
  
  "metadata": {
    "standalone": true,
    "removable": true,
    "selfContained": true,
    "hasExternalDependencies": false,
    "requiresServerConfig": true,
    "dataStorage": ["localStorage", "sessionStorage"],
    "platforms": ["web", "mobile", "tablet"],
    "accessibility": true,
    "i18nReady": false
  },
  
  "features": [
    "Multi-modal memory training",
    "Progressive difficulty system",
    "Mobile-responsive touch controls",
    "Virtual hand interface",
    "Audio feedback system",
    "Haptic feedback support",
    "Achievement system",
    "High score tracking",
    "Performance analytics",
    "Multiple game modes",
    "Real-time pattern generation",
    "Cognitive skill assessment"
  ],
  
  "gameInfo": {
    "genre": "cognitive-training",
    "difficulty": "adaptive",
    "ageRating": "all-ages",
    "playTime": "2-10 minutes per session",
    "skillLevel": "beginner to expert",
    "cognitiveAreas": [
      "working memory",
      "pattern recognition",
      "finger dexterity",
      "multi-modal processing",
      "attention span",
      "reaction time"
    ]
  },
  
  "routes": {
    "primary": "/mmm-fingers",
    "queryParam": "?mode=mmm-fingers",
    "legacy": "?mmm=true",
    "modes": {
      "classic": "/mmm-fingers/classic",
      "speed": "/mmm-fingers/speed",
      "memory": "/mmm-fingers/memory",
      "challenge": "/mmm-fingers/challenge"
    }
  },
  
  "dependencies": {
    "react": "^18.0.0",
    "framer-motion": "^10.0.0"
  },
  
  "files": {
    "entry": "index.js",
    "mainComponent": "components/MMMFingersModule.jsx",
    "gameComponent": "games/MMMFingersGame.jsx",
    "config": "config/mmmConfig.js",
    "routes": "config/routes.js",
    "hooks": [
      "hooks/useMMMGameState.js",
      "hooks/useMMMSound.js",
      "hooks/useMMMHighScore.js",
      "hooks/useMMMTouchControls.js"
    ],
    "utils": [
      "utils/routeDetection.js"
    ]
  },
  
  "integration": {
    "mainApp": {
      "file": "src/App.jsx",
      "import": "import { MMMFingersModule, detectMMMRoute } from './modules/mmm-fingers'",
      "usage": "Route detection and component rendering"
    },
    "routing": {
      "vite": "vite.config.js",
      "netlify": "public/_redirects",
      "vercel": "vercel.json",
      "apache": "public/.htaccess"
    }
  },
  
  "configuration": {
    "gameModes": {
      "classic": {
        "difficulty": "progressive",
        "features": ["visual patterns", "basic audio"],
        "lives": 3,
        "maxPatternLength": 12
      },
      "speed": {
        "difficulty": "time-based",
        "features": ["time pressure", "quick reactions"],
        "lives": 5,
        "maxPatternLength": 8
      },
      "memory": {
        "difficulty": "complex",
        "features": ["multi-modal", "colors", "sounds"],
        "lives": 2,
        "maxPatternLength": 15
      },
      "challenge": {
        "difficulty": "expert",
        "features": ["all modalities", "random timing"],
        "lives": 1,
        "maxPatternLength": 20
      }
    },
    "audio": {
      "enabled": true,
      "volume": 0.3,
      "webAudioAPI": true,
      "hapticFeedback": true
    },
    "mobile": {
      "virtualHands": true,
      "touchFeedback": true,
      "responsiveScaling": true,
      "orientationSupport": true
    }
  },
  
  "performance": {
    "targetFPS": 60,
    "memoryUsage": "low",
    "batteryImpact": "minimal",
    "loadTime": "< 2 seconds",
    "bundleSize": "< 100KB"
  },
  
  "analytics": {
    "trackingEnabled": true,
    "dataRetention": "30 days",
    "privacyCompliant": true,
    "metrics": [
      "game sessions",
      "mode preferences",
      "score progression",
      "achievement unlocks",
      "session duration",
      "error patterns"
    ]
  },
  
  "accessibility": {
    "screenReader": true,
    "keyboardNavigation": true,
    "highContrast": true,
    "reducedMotion": true,
    "colorBlindSupport": true,
    "focusIndicators": true,
    "ariaLabels": true
  },
  
  "testing": {
    "unitTests": true,
    "integrationTests": true,
    "e2eTests": false,
    "mobileTests": true,
    "accessibilityTests": true,
    "performanceTests": true
  },
  
  "removal": {
    "safe": true,
    "impact": "none",
    "reversible": true,
    "steps": [
      "Remove import from src/App.jsx",
      "Delete src/modules/mmm-fingers/ directory",
      "Remove route configurations",
      "Clear localStorage (optional)",
      "Update documentation"
    ],
    "dataCleanup": [
      "localStorage: mmmClassicHighScore, mmmSpeedHighScore, etc.",
      "sessionStorage: mmmSessionId",
      "localStorage: mmmAccessAnalytics"
    ]
  },
  
  "documentation": {
    "readme": "README.md",
    "apiDocs": false,
    "userGuide": "embedded in component",
    "developerGuide": "README.md",
    "troubleshooting": false
  },
  
  "seo": {
    "indexable": false,
    "sitemap": false,
    "metaTags": {
      "title": "MMM Fingers - Multi-Modal Memory Training",
      "description": "Train your finger memory with progressive multi-modal exercises",
      "keywords": "memory training, finger exercises, cognitive training, brain games",
      "robots": "noindex, nofollow"
    }
  }
}
