{
  "name": "orgrj-monorepo",
  "version": "1.0.0",
  "description": "OrgRJ monorepo containing finclamp, arcade-games, engaged, and skips projects",
  "private": true,
  "type": "module",
  "workspaces": [
    "apps/*",
    "packages/*",
    "gateway"
  ],
  "scripts": {
    "dev": "npm run dev --workspace=apps/finclamp",
    "dev:all": "node scripts/dev-all.js",
    "dev:all-no-finclamp": "node scripts/dev-all.js --exclude-finclamp",
    "dev:finclamp": "npm run dev --workspace=apps/finclamp -- --port 5173",
    "dev:arcade": "npm run dev --workspace=apps/arcade-games -- --port 5174",
    "dev:engaged": "npm run dev --workspace=apps/engaged -- --port 5175",
    "dev:skips": "npm run dev --workspace=apps/skips -- --port 5176",
    "gateway": "node gateway/index.js",
    "gateway:dev": "nodemon gateway/index.js",
    "gateway:api": "node gateway/simple-api-gateway.js",
    "gateway:api:dev": "nodemon gateway/simple-api-gateway.js",
    "apis:start": "concurrently \"cd apps/api-finclamp-go && go run main.go\" \"cd apps/api-arcade-go && go run main.go\" \"cd apps/api-engaged-go && go run main.go\" \"cd apps/api-skips-go && go run main.go\"",
    "frontends:start": "concurrently \"npm run dev:finclamp\" \"npm run dev:arcade\" \"npm run dev:engaged\" \"npm run dev:skips\"",
    "fullstack:dev": "concurrently \"npm run apis:start\" \"npm run frontends:start\" \"sleep 15 && npm run gateway:dev\"",
    "fullstack:clean": "./scripts/start-clean.sh",
    "system:start": "./scripts/start-system.sh",
    "system:stop": "./scripts/stop-system.sh",
    "system:restart": "npm run system:stop && sleep 2 && npm run system:start",
    "fullstack:stop": "./scripts/stop-fullstack.sh",
    "fullstack:restart": "npm run fullstack:stop && sleep 3 && npm run fullstack:dev",
    "system:dev": "concurrently \"npm run apis:start\" \"npm run gateway:dev\"",
    "build": "npm run build --workspaces --if-present",
    "build:all-no-finclamp": "npm run build:arcade && npm run build:engaged && npm run build:skips",
    "build:finclamp": "npm run build --workspace=apps/finclamp",
    "build:arcade": "npm run build --workspace=apps/arcade-games",
    "build:engaged": "npm run build --workspace=apps/engaged",
    "build:skips": "npm run build --workspace=apps/skips",
    "build:github": "node scripts/build-all.js production",
    "build:github:staging": "node scripts/build-all.js staging",
    "build:app": "node scripts/build-app.js",
    "test": "npm run test --workspaces --if-present",
    "test:all-no-finclamp": "npm run test:arcade && npm run test:engaged && npm run test:skips",
    "test:finclamp": "npm run test --workspace=apps/finclamp",
    "test:arcade": "npm run test --workspace=apps/arcade-games",
    "test:engaged": "npm run test --workspace=apps/engaged",
    "test:skips": "npm run test --workspace=apps/skips",
    "lint": "npm run lint --workspaces --if-present",
    "clean": "npm run clean --workspaces --if-present && rm -rf node_modules",
    "install:all": "npm install",
    "deploy:finclamp": "npm run deploy --workspace=apps/finclamp",
    "deploy:github": "node scripts/deploy.js production",
    "deploy:github:staging": "node scripts/deploy.js staging",
    "deploy:github:skip-build": "node scripts/deploy.js production --skip-build",
    "serve:built": "node scripts/build-and-serve.js production 3000",
    "serve:built:staging": "node scripts/build-and-serve.js staging 3000",
    "serve:built:skip-build": "node scripts/build-and-serve.js production 3000 --skip-build",
    "docker:build": "docker-compose build",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f",
    "docker:restart": "docker-compose restart",
    "docker:clean": "docker-compose down -v --rmi all"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "concurrently": "^9.2.0",
    "nodemon": "^3.1.10",
    "typescript": "^5.2.2"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "author": "",
  "license": "ISC",
  "keywords": [
    "monorepo",
    "react",
    "vite",
    "games",
    "calculator",
    "workspaces"
  ],
  "dependencies": {
    "express": "^5.1.0",
    "http-proxy-middleware": "^3.0.5"
  }
}
