{
  "name": "prime-monorepo",
  "version": "1.0.0",
  "description": "Monorepo containing workouts-calculator, arcade-games, engagements, and skip-danger projects",
  "private": true,
  "type": "module",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "npm run dev --workspace=apps/workouts-calculator",
    "dev:all": "node scripts/dev-all.js",
    "dev:workouts": "npm run dev --workspace=apps/workouts-calculator",
    "dev:arcade": "npm run dev --workspace=apps/arcade-games",
    "dev:engagements": "npm run dev --workspace=apps/engagements",
    "dev:skip-danger": "npm run dev --workspace=apps/skip-danger",
    "build": "npm run build --workspaces --if-present",
    "build:workouts": "npm run build --workspace=apps/workouts-calculator",
    "build:arcade": "npm run build --workspace=apps/arcade-games",
    "build:engagements": "npm run build --workspace=apps/engagements",
    "build:skip-danger": "npm run build --workspace=apps/skip-danger",
    "test": "npm run test --workspaces --if-present",
    "test:workouts": "npm run test --workspace=apps/workouts-calculator",
    "test:arcade": "npm run test --workspace=apps/arcade-games",
    "test:engagements": "npm run test --workspace=apps/engagements",
    "test:skip-danger": "npm run test --workspace=apps/skip-danger",
    "lint": "npm run lint --workspaces --if-present",
    "clean": "npm run clean --workspaces --if-present && rm -rf node_modules",
    "install:all": "npm install",
    "deploy:workouts": "npm run deploy --workspace=apps/workouts-calculator"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "typescript": "^5.2.2"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "author": "",
  "license": "ISC",
  "keywords": [
    "monorepo",
    "react",
    "vite",
    "games",
    "calculator",
    "workspaces"
  ]
}
